<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipToPadding="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_set_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/set_delivery_location"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:singleLine="true"
                    android:clickable="false"
                    android:focusable="false"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_house_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House / Flat No"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Area"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Landmark"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tag_save_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/save_as" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_home"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:background="@android:color/white">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:id="@+id/image_tag_home"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        app:srcCompat="@drawable/ic_home_black_24dp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_tag_home"
                        android:text="@string/title_home"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="1dp"/>

                    <View
                        android:id="@+id/view_select_home"
                        android:padding="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_work"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:background="@android:color/white">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:id="@+id/image_tag_work"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        app:srcCompat="@drawable/ic_baseline_work_24px"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_tag_work"
                        android:text="@string/title_work"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="1dp"/>

                    <View
                        android:id="@+id/view_select_work"
                        android:padding="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_other"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:padding="2dp"
                    android:background="@android:color/white">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:id="@+id/image_tag_others"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        app:srcCompat="@drawable/ic_baseline_pin_drop_24px"
                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_tag_other"
                        android:text="Others"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:padding="1dp"/>

                    <View
                        android:id="@+id/view_select_other"
                        android:padding="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>

                </LinearLayout>



            </LinearLayout>


            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_others"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:singleLine="true"
                android:hint="e.g.: like John's Home, School, Hostel, College"/>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_location_submit"
                style="@style/style_button"
                android:text="@string/submit"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>